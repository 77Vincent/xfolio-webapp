{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "globals": {
    "log": true
  },
  "rules": {
    "init-declarations": ["error", "always"],
    "semi": ["error", "never"],
    "camelcase": "off",
    "linebreak-style": "off",
    "curly": "error",
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "max-len": ["error", {
      "code": 120
    }],
    "no-script-url": [0],
    "default-case": [0],
    "no-param-reassign": [0],
    "no-return-await": [0],
    "arrow-body-style": [0],
    "jsx-a11y/anchor-is-valid": [0],
    "jsx-a11y/click-events-have-key-events": [0],
    "react/forbid-prop-types": [2, { "forbid": ["any"] }],
    "react/prefer-stateless-function": [0],
    "import/prefer-default-export": [0]
  }
}